<h1><%= @customer.last_name %>さんの委員情報編集</h1>

<%= form_with model:@customer, url: admin_customer_path(@customer), local:true do |f| %>

<table>
    <tr>
        <th>会員ID</th><td><%= f.text_field :id %></td>
    </tr>
     <tr>
        <th>名前</th><td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
    </tr>
     <tr>
        <th>フリガナ</th><td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
    </tr>
     <tr>
        <th>郵便番号</th><td><%= f.text_field :postal_code %></td>
    </tr>
     <tr>
        <th>住所</th><td><%= f.text_field :address %></td>
    </tr>
     <tr>
        <th>電話番号</th><td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
        <th>メールアドレス</th><td><%= f.text_field :email %></td>
    </tr>
    <tr>
        <th>有効ステータス</th>
        <td>
    　　　<%= f.radio_button :is_deleted, :有効, checked: "checked" %><%= f.label :有効, class: "is_deleted" %>
    　　　<%= f.radio_button :is_deleted, :無効 %><%= f.label :無効, class: "is_deleted" %>
        </td>
    </tr>
    
</table>
   <%= f.submit "変更を保存" %>
   <% end %>