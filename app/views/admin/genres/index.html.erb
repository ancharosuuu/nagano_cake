<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>

 <p>ジャンル名</p><%= f.text_field :name %>
 <%= f.submit '新規登録' %>
<% end %> 

<table>
    <tr>
        <th>
            ジャンル
        </th>
    </tr>
    
    <tr>
    　　    <% @genres.each do |genre| %>
    　　<td>
          <%= genre.name  %> <%= link_to "編集する", edit_admin_genre_path(genre) %>
        </td>
    </tr>
         <% end %>
</table>

