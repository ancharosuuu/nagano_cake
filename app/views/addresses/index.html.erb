<h1>配送先登録/一覧</h1>
<%= form_with model:@address, url: address_path(@address), local:true do |f| %>
<p>郵便番号<%= f.text_field :postal_cade, autofocus: true %></p>
<p>住所<%= f.text_field :address, autofocus: true %></p>
<p>宛名<%= f.text_field :name, autofocus: true %></p>
<%= f.submit "新規登録" %> 
<% end %>

<table>
    <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
    </tr>
    <tr>
<% @addresses.each do |address| %>
        <td><%= address.postal_cade %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address) %> <%= link_to "削除する", address_path(address), method: :delete %></td>
    </tr>
<% end %>
</table>
    
