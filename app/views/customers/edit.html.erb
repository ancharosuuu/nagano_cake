<h2>会員情報編集</h2>

<%= form_with model:@customer, url: customers_path, local:true do |f| %>
  

　<div class="field">
    名前 (姓）<%= f.text_field :last_name, autofocus: true %>
    (名）<%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    (セイ）<%= f.text_field :last_name_kana, autofoucus: true %>
    （メイ）<%= f.text_field :first_name_kana, autofoucus: true %>
  </div>

  <div class="field">
    メールアドレス
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    郵便番号（ハイフンなし）
    <%= f.text_field :potal_cade %>
  </div>

  <div class="field">
    住所
    <%= f.text_field :address %>
  </div>

  <div class="field">
    電話番号
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    パスワード（６文字以上）
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    パスワード（確認用）
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存する" %> 
  </div>
<% end %>