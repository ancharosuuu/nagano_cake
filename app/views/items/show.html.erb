<h1>商品詳細ページ</h1>

<%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
<%= f.hidden_field :item_id, :value => @item.id %>
 <p><%= attachment_image_tag @item, :image, :fill, 300, 200  %></p>
 <h2><%= @item.name %></h2>
 <p><%= @item.introduction %></p>
 <p>¥<%= (@item.price * @tax.round(1)).ceil %>(税込）</p>
 <p><%= f.select :amount, ['1', '2', '3'], {include_blank: '個数選択'}, 
class: 'amount' %></p>
 <%= f.submit 'カートに追加する' %>
 <% end %>
 
 
