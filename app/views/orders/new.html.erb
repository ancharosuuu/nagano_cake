<h1>注文情報入力</h1>
<%= form_with model: @orders, url: orders_path, local:true do |f| %>
<h2>支払い方法</h2>
<%= f.radio_button :payment_method, "クレジット" %>
<%= f.label :payment_method, "クレジット", {value: :credit, style: "display: inline-block;"} %>
<%= f.radio_button :payment_method, "現金" %>
<%= f.label :payment_method, "現金", {value: :cash, style: "display: inline-block;"} %>

<h2>お届け先</h2>
<%= f.radio_button :address_option, "ご自身の住所" %>
<%= f.label :address, "ご自身の住所" %>
〒<%= @customer.postal_code %> <%= @customer.address %> <br>
<%= @customer.last_name %><%= @customer.first_name %>

<br>  
<%= f.radio_button :address_option, 1 %>  
<%= f.label :address, "登録済住所から選択" %> 
<%= f.collection_select :address , Address.all, :id, :address_was, :include_blank => "選択してください" %>

<br>
<%= f.radio_button :address_option, 2 %>
<%= f.label :address, "新しいお届け先" %>

<p>郵便番号<%= f.text_field :postal_cade, autofocus: true %></p>
<p>住所<%= f.text_field :address, autofocus: true %></p>
<p>宛名<%= f.text_field :name, autofocus: true %></p>
<%= f.submit "新規登録" %> 


<% end %>
