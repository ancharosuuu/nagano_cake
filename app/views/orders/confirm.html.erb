<h1>注文確認画面</h1>
<table>
    <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
    </tr>
    <tr>
        <% @sum = 0 %>
        <% @cart_items.each do |cart_item| %>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= ((cart_item.item.price * @tax.round(1)).ceil*cart_item.amount).to_i %></td>
        <% @sum %>
      <% end %>
</table>

<br>

<h2>支払い方法</h2><%= @order.payment_method %>

<h2>お届け先</h2>〒<%= @order.postal_code %><%= @order.address %><br>
<%= @order.name %>

<table>
    <tr>
        <th>送料</th> <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
        <th>商品合計</th> <td><%= @order.total_payment %></td>
    </tr>
    <tr>
        <th>請求金額</th> <td></td>
    </tr>
</table>